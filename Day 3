// Activity 1: If-Else Statements

// Task 1: Write a program to check if a number is positive, negative, or zero, and log the result to the console.
let num = -5;
if (num > 0) {
    console.log("Task 1 - Number is positive");
} else if (num < 0) {
    console.log("Task 1 - Number is negative");
} else {
    console.log("Task 1 - Number is zero");
}
// Output: Task 1 - Number is negative

// Task 2: Write a program to check if a person is eligible to vote (age >= 18) and log the result to the console.
let age = 20;
if (age >= 18) {
    console.log("Task 2 - Eligible to vote");
} else {
    console.log("Task 2 - Not eligible to vote");
}
// Output: Task 2 - Eligible to vote

// Activity 2: Nested If-Else Statements

// Task 3: Write a program to find the largest of three numbers using nested if-else statements.
let num1 = 15;
let num2 = 10;
let num3 = 20;

if (num1 >= num2) {
    if (num1 >= num3) {
        console.log("Task 3 - The largest number is", num1);
    } else {
        console.log("Task 3 - The largest number is", num3);
    }
} else {
    if (num2 >= num3) {
        console.log("Task 3 - The largest number is", num2);
    } else {
        console.log("Task 3 - The largest number is", num3);
    }
}
// Output: Task 3 - The largest number is 20

// Activity 3: Switch Case

// Task 4: Write a program that uses a switch case to determine the day of the week based on a number (1-7) and log the day name to the console.
let dayNumber = 3;
switch (dayNumber) {
    case 1:
        console.log("Task 4 - Monday");
        break;
    case 2:
        console.log("Task 4 - Tuesday");
        break;
    case 3:
        console.log("Task 4 - Wednesday");
        break;
    case 4:
        console.log("Task 4 - Thursday");
        break;
    case 5:
        console.log("Task 4 - Friday");
        break;
    case 6:
        console.log("Task 4 - Saturday");
        break;
    case 7:
        console.log("Task 4 - Sunday");
        break;
    default:
        console.log("Task 4 - Invalid day number");
}
// Output: Task 4 - Wednesday

// Task 5: Write a program that uses a switch case to assign a grade ('A', 'B', 'C', 'D', 'F') based on a score and log the grade to the console.
let score = 85;
let grade;
switch (true) {
    case (score >= 90):
        grade = 'A';
        break;
    case (score >= 80):
        grade = 'B';
        break;
    case (score >= 70):
        grade = 'C';
        break;
    case (score >= 60):
        grade = 'D';
        break;
    default:
        grade = 'F';
}
console.log("Task 5 - Grade:", grade);
// Output: Task 5 - Grade: B

// Activity 4: Conditional (Ternary) Operator

// Task 6: Write a program that uses the ternary operator to check if a number is even or odd and log the result to the console.
let number = 4;
let isEven = (number % 2 === 0) ? "Even" : "Odd";
console.log("Task 6 - Number is", isEven);
// Output: Task 6 - Number is Even

// Activity 5: Combining Conditions

// Task 7: Write a program to check if a year is a leap year using multiple conditions (divisible by 4, but not 100 unless also divisible by 400) and log the result to the console.
let year = 2024;
if ((year % 4 === 0 && year % 100 !== 0) || (year % 400 === 0)) {
    console.log("Task 7 -", year, "is a leap year");
} else {
    console.log("Task 7 -", year, "is not a leap year");
}
// Output: Task 7 - 2024 is a leap year
