// Activity 1: For Loop

// Task 1: Write a program to print numbers from 1 to 10 using a for loop.
console.log("---------------------------------TASK1----------------------------------");
for (let i = 1; i <= 10; i++) {
  console.log(i);
}
console.log("-----------------------------------------------------------------------");

// Task 2: Write a program to print the multiplication table of 5 using a for loop.
console.log("---------------------------------TASK2----------------------------------");
let five = 5;
for (let i = 1; i <= 10; i++) {
  console.log(`${five} X ${i} = ${five * i}`);
}
console.log("-----------------------------------------------------------------------");

// Activity 2: While Loop

// Task 3: Write a program to calculate the sum of numbers from 1 to 10 using a while Loop
console.log("---------------------------------TASK3----------------------------------");
let sum = 0;
let count = 1;
while (count <= 10) {
  sum += count;
  count++;
}
console.log("Sum from 1 to 10 is", sum);
console.log("-----------------------------------------------------------------------");

// Task 4: Write a program to print numbers from 10 to 1 using a while loop.
console.log("---------------------------------TASK4----------------------------------");
let counter = 10;
console.log("Numbers from 10 to 1");
while (counter >= 1) {
  console.log(counter);
  counter--;
}
console.log("-----------------------------------------------------------------------");

// Activity 3: Do ... While Loop

// Task 5: Write a program to print numbers from 1 to 5 using a do ... while loop.
console.log("---------------------------------TASK5----------------------------------");
let i = 1;
do {
  if (i !== 5) {
    console.log(i);
  }
  i++;
} while (i <= 10);

// Task 6: Write a program to calculate the factorial of a number using a do ... while loop.
let num = 5;
let fact = 1;
let originalNum = num;
do {
  fact *= num;
  num--;
} while (num > 0);
console.log(`Factorial of ${originalNum} is: ${fact}`);

// Activity 4: Nested Loops

// Task 7: Write a program to print a pattern using nested for loops.
console.log("---------------------------------TASK7----------------------------------");

// Solution 1: Print pattern using process.stdout.write to avoid new line at each step
let rows = 5;
for (let i = 1; i <= rows; i++) {
  for (let j = 0; j < i; j++) {
    process.stdout.write("* ");
  }
  console.log(""); // Move to the next line after each row
}

console.log("-----------------------------------------------------------------------");

// Solution 2: Print pattern using string concatenation and then outputting at once
let output = '';
for (let i = 1; i <= rows; i++) {
  for (let j = 0; j < i; j++) {
    output += "* ";
  }
  output += "\n"; // Add a newline after each row
}
console.log(output);
//Activity 5:
// Task 1: Print numbers from 1 to 10, skipping 5
console.log("---------------------------------TASK1----------------------------------");
for (let i = 1; i <= 10; i++) {
  if (i !== 5) {
    console.log(i);
  }
}
console.log("-----------------------------------------------------------------------");

// Task 2: Print numbers from 1 to 10, breaking the loop at 7
console.log("---------------------------------TASK2----------------------------------");
for (let i = 1; i <= 10; i++) {
  console.log(i);
  if (i === 7) {
    break;
  }
}
console.log("-----------------------------------------------------------------------");
