// Activity 1: Variable Declaration

// Task 1: Declare a variable using var, assign it a number, and log the value to the console.
var numberVar = 10;
console.log("Task 1 - var number:", numberVar); // Output: 10

// Task 2: Declare a variable using let, assign it a string, and log the value to the console.
let stringLet = "Hello, World!";
console.log("Task 2 - let string:", stringLet); // Output: Hello, World!

// Activity 2: Constant Declaration

// Task 3: Declare a variable using const, assign it a boolean value, and log the value to the console.
const booleanConst = true;
console.log("Task 3 - const boolean:", booleanConst); // Output: true

// Activity 3: Data Types

// Task 4: Create variables of different data types (number, string, boolean, object, array) 
// and log each variable's type using the typeof operator.

let numberType = 42;
let stringType = "JavaScript";
let booleanType = false;
let objectType = { key: "value" };
let arrayType = [1, 2, 3];

console.log("Task 4 - number type:", typeof numberType); // Output: number
console.log("Task 4 - string type:", typeof stringType); // Output: string
console.log("Task 4 - boolean type:", typeof booleanType); // Output: boolean
console.log("Task 4 - object type:", typeof objectType); // Output: object
console.log("Task 4 - array type:", typeof arrayType); // Output: object (Arrays are objects in JavaScript)

// Activity 4: Reassigning Variables

// Task 5: Declare a variable using let, assign it an initial value, reassign a new value, 
// and log both values to the console.

let reassignVar = "Initial Value";
console.log("Task 5 - Initial value:", reassignVar); // Output: Initial Value

reassignVar = "New Value";
console.log("Task 5 - New value:", reassignVar); // Output: New Value

// Activity 5: Understanding const

// Task 6: Try reassigning a variable declared with const and observe the error.

const constantVar = "I am constant";
console.log("Task 6 - const value:", constantVar); // Output: I am constant

// Trying to reassign a const variable will result in an error.
// Uncomment the next line to see the error in the console.

// constantVar = "New Value"; // This will cause a TypeError: Assignment to constant variable.

